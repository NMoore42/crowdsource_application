<% if @errors %>
<% @errors.each do |error|  %>
<%= error %>
<% end %>
<% end %>

<style media="screen">
  .field_with_errors {
    border: 2px red solid;
  }
</style>

<%= form_for @submission do |f| %>
  <%= f.label "Subtitle" %><br>
  <%= f.text_field :subtitle %><br>
  <%= f.label "Summary" %><br>
  <%= f.text_field :summary %><br>
  <%= f.label "Content" %><br>
  <%= f.text_field :content %><br>


  <%= f.submit %>
<% end %>
